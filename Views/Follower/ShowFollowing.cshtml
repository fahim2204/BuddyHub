@model IEnumerable<BuddyHub.Models.VM.ProfileData>

@{
    ViewBag.Title = "ShowFollowing";
}

<h2>Show Followeing</h2>

<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.PImage)
        </th>
    </tr>

@foreach (var item in Model) {
<tr>
    <a href="/Profile/ViewProfile/@item.Username">
    <td>
        @Html.DisplayFor(modelItem => item.Name)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.PImage)
    </td>
    </a>

</tr>
}

</table>
